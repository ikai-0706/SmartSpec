@page "/documents"
@using System.Net.Http.Json
@inject HttpClient Http

<h3>規格書管理系統</h3>

<div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="輸入關鍵字..."
           @bind="keyword" @bind:event="oninput" @onkeyup="HandleEnter">
    <button class="btn btn-primary" @onclick="SearchDocuments">搜尋</button>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger d-flex justify-content-between align-items-center">
        <span>⚠️ 發生錯誤：@errorMessage</span>
        <button class="btn btn-sm btn-outline-danger" @onclick="LoadAllDocuments">重試</button>
    </div>
}
else if (isLoading) // 【修改點 2】用明確的 isLoading 旗標
{
    <div class="d-flex align-items-center">
        <div class="spinner-border text-primary me-2" role="status"></div>
        <span>正在載入資料中...</span>
    </div>
}
else if (documents == null || documents.Length == 0)
{
    <div class="alert alert-warning">找不到相關文件</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>標題</th>
                <th>上傳時間</th>
                <th>檔案路徑</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in documents)
            {
                <tr>
                    <td>@doc.Title</td>
                    <td>@doc.UploadedAt.ToString("yyyy/MM/dd HH:mm")</td>
                    <td class="text-muted small">@doc.FilePath</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Document[]? documents;
    private string keyword = "";

    // 【修改點 3】新增狀態控制變數
    private string errorMessage = "";
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadAllDocuments();
    }

    private async Task LoadAllDocuments()
    {
        // 每次載入前重置狀態
        isLoading = true;
        errorMessage = "";
        documents = null; // 清空舊資料，避免畫面混淆

        try
        {
            // 模擬網路延遲 (測試用，正式上線請拿掉)
            // await Task.Delay(1000);
            documents = await Http.GetFromJsonAsync<Document[]>("api/Documents");
        }
        catch (Exception ex)
        {
            // 捕捉錯誤，顯示給 User 看
            errorMessage = $"無法連線到伺服器 ({ex.Message})";
            Console.WriteLine($"[Error] {ex}");
        }
        finally
        {
            // 不管成功失敗，都要關閉 Loading
            isLoading = false;
        }
    }

    private async Task SearchDocuments()
    {
        if (string.IsNullOrWhiteSpace(keyword))
        {
            await LoadAllDocuments();
            return;
        }

        isLoading = true;
        errorMessage = "";

        try
        {
            documents = await Http.GetFromJsonAsync<Document[]>($"api/Documents/search?keyword={keyword}");
        }
        catch (Exception ex)
        {
            errorMessage = $"搜尋失敗 ({ex.Message})";
        }
        finally
        {
            isLoading = false;
        }
    }

    // HandleEnter 與 Class 定義保持不變...
    private async Task HandleEnter(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") await SearchDocuments();
    }

    public class Document
    {
        public Guid Id { get; set; }
        public string Title { get; set; }
        public string FilePath { get; set; }
        public DateTime UploadedAt { get; set; }
    }
}